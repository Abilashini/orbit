    <build>
        <plugins>
            <!--TODO Fix the private references warnings -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.4.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.apache.spark.*;version="${spark.version}";-split-package:=merge-first,
                        </Export-Package>
                        <Private-Package>
                            com.typesafe.config.*,
                            akka.*
                        </Private-Package>
                        <Import-Package>
                            !scala.tools.*,
                            <!--spark sql imports-->
                            <!--org.apache.spark.sql;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.parquet;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.api.java;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.test;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.json;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.execution;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.execution.debug;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.execution.joins;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.sources;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.types.util;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.planning;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.errors;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.analysis;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.plans.logical;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.plans;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.plans.physical;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.trees;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.dsl;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.optimizer;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.rules;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.annotation;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.types;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.types.decimal;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.expressions;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.expressions.codegen;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.catalyst.util;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.columnar;version="${spark.import.version}",-->
                            <!--org.apache.spark.sql.columnar.compression;version="${spark.import.version}",-->

                            <!--org.wso2.carbon.analytics.spark.core,-->
                            <!--org.wso2.carbon.analytics.spark.core.internal,-->
                            <!--org.wso2.carbon.analytics.datasource.core,-->

                            scala.*;version="${scala.import.version}",
                            org.apache.commons.lang3.*;version="${commons-lang3.import.version}",
                            org.apache.commons.math3.*;version="${commons-math3.import.version}",
                            io.netty.*;version="${netty-all.import.version}",
                            <!--!javax.servlet.*;version ="2.6",-->

                            org.apache.hadoop.*;version=$"{hadoop.client.import.version}",
                            javax.servlet.*;version ="${servlet-api.import.version}",
                            <!-- todo: these were made private beacuse of reference.conf file missing for com.typesafe.config bundle-->
                            <!--com.typesafe.config.*;version=$"{typesafe.import.version}",-->
                            <!--akka.*; version=$"{akka.import.version}",-->
                            com.codahale.metrics.*;version="${codahale.metrics.import.version}",
                            com.fasterxml.jackson.*;version="${jackson.import.version}",
                            org.json4s.*;version = "${json4s.import.version}",
                            com.esotericsoftware.*; version = "${kryo.import.version}",
                            org.xerial.snappy.*;version="${snappy.import.version}",
                            com.ning.compress.*;version="${compress.lzf.import.version}",
                            com.google.common.base.*;version="${guava.import.version}",
                            com.google.common.cache.*;version="${guava.import.version}",
                            com.google.common.collect.*;version="${guava.import.version}",
                            com.google.common.hash.*;version="${guava.import.version}",
                            com.google.common.io.*;version="${guava.import.version}",
                            com.google.common.util.concurrent.*;version="${guava.import.version}",
                            org.slf4j.*;version="${slf4j.import.version}",
                            <!--org.slf4j.impl.*;version="${slf4j.import.version}",-->

                            *;resolution:=optional
                        </Import-Package>
                        <Include-Resource>
                            {maven-resources},
                            @spark-core_2.10-${spark.version}.jar!/META-INF/**,
                            @spark-core_2.10-${spark.version}.jar!/*.conf,
                            @spark-core_2.10-${spark.version}.jar!/*.yaml*,
                            @spark-core_2.10-${spark.version}.jar!/*.xml,
                            @spark-core_2.10-${spark.version}.jar!/*.ini,
                        </Include-Resource>
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

