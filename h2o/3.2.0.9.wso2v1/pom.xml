<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.orbit.ai.h2o</groupId>
    <artifactId>h2o</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - Orbit - H2O</name>
    <version>3.2.0.9.wso2v1</version>
    <description>This bundle exports packages from h2o jar files</description>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>ai.h2o</groupId>
            <artifactId>h2o-app</artifactId>
            <version>${h2o.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>ai.h2o</groupId>
            <artifactId>h2o-core</artifactId>
            <version>${h2o.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>ai.h2o</groupId>
            <artifactId>h2o-algos</artifactId>
            <version>${h2o.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>ai.h2o</groupId>
            <artifactId>h2o-genmodel</artifactId>
            <version>${h2o.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>ai.h2o</groupId>
            <artifactId>h2o-web</artifactId>
            <version>${h2o.version}</version>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-Vendor>WSO2 Inc</Bundle-Vendor>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <!--<Export-Package>-->
                            <!--ai.h2o.h2o.*;version="${h2o.version}";-split-package:=merge-first-->
                        <!--</Export-Package>-->
                        <_importcontents>
                            org.apache.log4j.LogManager;resolution:=optional,
                            ai.h2o.h2o-core;resolution:=optional,
                            ai.h2o.h2o-genmodel;resolution:=optional,
                            ai.h2o.h2o-algos;resolution:=optional,
                            ai.h2o.h2o-web;resolution:=optional,
                            ai.h2o.h2o-app;resolution:=optional,

                            !Jama;resolution:=optional,
                            !com.google.gson;resolution:=optional,
                            !jsr166y;resolution:=optional,
                            !org.joda.time.format;resolution:=optional,
                            !sun.misc;resolution:=optional,
                            !com.brsanthu.googleanalytics;resolution:=optional,
                            !com.google.*;resolution:=optional,
                            !edu.emory.mathcs.*;resolution:=optional,
                            !javassist;resolution:=optional,
                            !javax.*;resolution:=optional,
                            !org.apache.commons.*;resolution:=optional,
                            !org.apache.log4j.spi;resolution:=optional,
                            !org.eclipse.*;resolution:=optional,
                            !org.joda.time;resolution:=optional,
                            !org.reflections.*;resolution:=optional,
                            !hex.genmodel;resolution:=optional,
                            !sun.misc;resolution:=optional,
                            !org.joda.time.format;resolution:=optional

                            <!--!com.sun.*;resolution:=optional,-->
                            <!--!javax.*;resolution:=optional,-->
                            <!--!org.apache.avalon.framework.logger;resolution:=optional,-->
                            <!--!org.apache.axis.*;resolution:=optional,-->
                            <!--!org.apache.commons.vfs2;resolution:=optional,-->
                            <!--!org.apache.log;resolution:=optional,-->
                            <!--!org.bouncycastle.jce.provider;resolution:=optional,-->
                            <!--!org.dom4j.*;resolution:=optional,-->
                            <!--!org.eclipse.jetty.jmx;resolution:=optional,-->
                            <!--!org.ietf.jgss;resolution:=optional,-->
                            <!--!org.joda.convert;resolution:=optional,-->
                            <!--!org.mortbay.*;resolution:=optional,-->
                            <!--!org.slf4j.*;resolution:=optional,-->
                            <!--!org.w3c.dom;resolution:=optional,-->
                            <!--!org.xml.sax.*;resolution:=optional,-->
                            <!--!sun.*;resolution:=optional-->
                        </_importcontents>
                        <Include-Resource>
                            {maven-resources}
                        </Include-Resource>
                        <DynamicImport-Package>*</DynamicImport-Package>
                        <Embed-Dependency>*;scope=runtime;inline=true</Embed-Dependency>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <h2o.version>3.2.0.9</h2o.version>
        <orbit.version.h2o>${h2o.version}.wso2v1</orbit.version.h2o>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <id>wso2-nexus</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/groups/wso2-public/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>wso2.releases</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/releases/</url>
        </repository>

        <snapshotRepository>
            <id>wso2.snapshots</id>
            <name>Apache Snapshot Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

</project>
