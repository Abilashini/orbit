<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.orbit.org.bouncycastle</groupId>
    <artifactId>bcmail-jdk15on</artifactId>
    <packaging>bundle</packaging>
    <name>bcmail</name>
    <version>1.52.0.wso2v1</version>
    <description>
        This bundle will represent org.bouncycastle
    </description>
    <url>http://wso2.org</url>
    <repositories>
        <repository>
            <id>wso2-nexus</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/groups/wso2-public/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
        </repository>
    </repositories>
    <dependencies>
        <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcmail-jdk15on</artifactId>
            <version>1.52</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.bouncycastle.mail.smime.*,
                            !org.bouncycastle.x509,
                            !org.bouncycastle.util,
                            !org.bouncycastle.pqc,
                            !org.bouncycastle.ocsp,
                            !org.bouncycastle.math,
                            !org.bouncycastle.jce,
                            !org.bouncycastle.jcajce,
                            !org.bouncycastle.i18n,
                            !org.bouncycastle.crypto,
                            !org.bouncycastle.asn1
                        </Export-Package>
                        <Import-Package>
                            org.bouncycastle.x509.*;version="${bouncycastle.import.version.range}",
                            org.bouncycastle.util.*;version="${bouncycastle.import.version.range}",
                            org.bouncycastle.pqc.*;version="${bouncycastle.import.version.range}",
                            org.bouncycastle.ocsp.*;version="${bouncycastle.import.version.range}",
                            org.bouncycastle.math.*;version="${bouncycastle.import.version.range}",
                            org.bouncycastle.jce.*;version="${bouncycastle.import.version.range}",
                            org.bouncycastle.jcajce.*;version="${bouncycastle.import.version.range}",
                            org.bouncycastle.i18n.*;version="${bouncycastle.import.version.range}",
                            org.bouncycastle.crypto.*;version="${bouncycastle.import.version.range}",
                            org.bouncycastle.asn1.*;version="${bouncycastle.import.version.range}"
                        </Import-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <bouncycastle.import.version.range>[1.52.0, 1.55.0)</bouncycastle.import.version.range>
    </properties>

</project>
