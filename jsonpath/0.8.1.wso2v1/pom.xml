<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.jayway.jsonpath</groupId>
    <artifactId>com.jayway.jsonpath</artifactId>
    <packaging>bundle</packaging>
    <name>json-path.wso2</name>
    <version>0.8.1.wso2v1</version>
    <description>
        This bundle will represent json-path
    </description>
    <url>http://wso2.org</url>

  <dependencies>
	<dependency>
    		<groupId>com.jayway.jsonpath</groupId>
    		<artifactId>json-path</artifactId>
    		<version>0.8.1</version>
	</dependency>
	<dependency>
    		<groupId>com.jayway.jsonpath</groupId>
    		<artifactId>json-path-assert</artifactId>
    		<version>0.8.1</version>
    		<scope>test</scope>
	</dependency>
	<!--dependency>
	<groupId>net.minidev</groupId>
	<artifactId>json-smart</artifactId>
	<version>1.1.1</version>
</dependency-->
<dependency>
	<groupId>commons-lang</groupId>
	<artifactId>commons-lang</artifactId>
	<version>2.6</version>
</dependency>
            
            
 </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
	        <version>1.4.0</version>               
                <extensions>true</extensions>
		
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
			 com.jayway.jsonpath.spi.impl;uses:="com.jayway.jsonpath,org.codehaus.jackson.map.type,net.minidev.json,net.minidev.json.parser,
			 org.codehaus.jackson.type,org.apache.commons.lang,org.codehaus.jackson.map,com.jayway.jsonpath.spi,org.codehaus.jackson",
			 com.jayway.jsonpath.internal.filter;uses:="com.jayway.jsonpath.spi,com.jayway.jsonpath,com.jayway.jsonpath.internal.filter.eval",
			 com.jayway.jsonpath.internal;uses:="com.jayway.jsonpath.internal.filter,com.jayway.jsonpath.spi,com.jayway.jsonpath",
			 com.jayway.jsonpath.spi;uses:="com.jayway.jsonpath.spi.impl,com.jayway.jsonpath",
			 com.jayway.jsonpath;uses:="com.jayway.jsonpath.internal.filter,com.jayway.jsonpath.internal,com.jayway.jsonpath.spi,
			 org.apache.commons.lang",com.jayway.jsonpath.internal.filter.eval
			</Export-Package>
                        <Import-Package>
                            !com.jayway.jsonpath.*,net.minidev.json;resolution:=optional,net.minidev.json.parser;resolution:=optional,
			    org.apache.commons.lang;resolution:=optional;version="2.6",org.codehaus.jackson;resolution:=optional,
			    org.codehaus.jackson.map;resolution:=optional,org.codehaus.jackson.map.type;resolution:=optional,
			    org.codehaus.jackson.type;resolution:=optional
                        </Import-Package>                      
                        
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>


</project>
