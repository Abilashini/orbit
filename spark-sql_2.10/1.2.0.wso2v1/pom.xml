<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.apache.spark.wso2</groupId>
    <artifactId>spark-sql_2.10</artifactId>
    <version>1.2.0.wso2v1</version>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon Orbit - Apache Spark SQL</name>
    <description>
        This bundle will export packages from Apache Spark SQL
    </description>
    <url>http://wso2.org</url>
    <repositories>
        <repository>
            <id>wso2-nexus</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/groups/wso2-public/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>wso2.releases</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>wso2.snapshots</id>
            <name>Apache Snapshot Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <dependencies>
        <!--spark orbit bundle-->
        <dependency>
            <groupId>org.apache.spark.wso2</groupId>
            <artifactId>spark-core_2.10</artifactId>
            <version>1.2.0.wso2v1</version>
        </dependency>

        <dependency>
            <groupId>org.apache.spark</groupId>
            <artifactId>spark-sql_2.10</artifactId>
            <version>1.2.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.spark</groupId>
            <artifactId>spark-catalyst_2.10</artifactId>
            <version>1.2.0</version>
        </dependency>
    </dependencies>

    <!-- ### DEPS
    JSON Lib		com.fasterxml.jackson.core » jackson-databind	2.3.0
    com.twitter » parquet-column	1.6.0rc3
    com.twitter » parquet-hadoop	1.6.0rc3
    Testing		junit » junit	4.10
    org.apache.spark » spark-catalyst_2.10	1.2.0
    org.apache.spark » spark-catalyst_2.10	1.2.0
    Distributed Computing		org.apache.spark » spark-core_2.10	1.2.0
    Lang Runtime		org.codehaus.groovy » groovy-all	2.3.7
    Testing		org.scalacheck » scalacheck_2.10	1.11.3
    Testing		org.scalatest » scalatest_2.10	2.2.1-->


    <build>
        <plugins>
            <!--TODO Fix the private references warnings -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.4.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.apache.spark.sql.*;version="${spark.version}";-split-package:=merge-first
                        </Export-Package>
                        <Private-Package>
                        </Private-Package>
                        <Import-Package>
                            !org.apache.spark.sql.*,
                            org.apache.spark.*;version=$"{spark.import.version}",
                            *;resolution:=optional
                        </Import-Package>
                        <Include-Resource>
                            {maven-resources},
                            @spark-core_2.10-${spark.version}.jar!/META-INF/**,
                            @spark-core_2.10-${spark.version}.jar!/*.conf,
                            @spark-core_2.10-${spark.version}.jar!/*.yaml*,
                            @spark-core_2.10-${spark.version}.jar!/*.xml,
                            @spark-core_2.10-${spark.version}.jar!/*.ini,
                        </Include-Resource>
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <exp.pkg.version.spark>1.2.0.wso2v1</exp.pkg.version.spark>
        <spark.version>1.2.0</spark.version>
        <spark.import.version>[1.2.0, 1.3.0)</spark.import.version>
        <scala.version>2.10.4</scala.version>
        <scala.import.version>[2.10.4, 2.11.0)</scala.import.version>
    </properties>

</project>